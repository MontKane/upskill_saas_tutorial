<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <% if params[:plan] != '1' && params[:plan] != '2'%>
          <% params[:plan] = '1' %>
        <% end %> <!--Check to see if user modified URL-->
        
        <%= hidden_field_tag 'plan', params[:plan] %> <!--Plan for DB -->
        
        <% if params[:plan] == '2' %> <!--If pro plan, go to pro page -->
          <h2> Pro Account </h2>
          <p>Sign up for the pro account for $10/month and get access to the community
          and contact information!</p>
          <%= render "pro_form" %>
        <% else %> <!--If not pro plan, go to basic page -->
          <h2> Basic Sign Up Form</h2>
          <p> Sign up for free and get basic access to the community.</p>
          <%= render "basic_form" %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
