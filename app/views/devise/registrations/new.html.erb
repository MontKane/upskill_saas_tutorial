<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <%= hidden_field_tag 'plan', params[:plan] %>
        <% if params[:plan] == '2' %>
          <h2> Pro Account </h2>
          <p>Sign up for the pro account for $10/month and get access to the community
          and contact information!</p>
          <%= render "pro_form" %>
        <% else %>
          <h2> Basic Sign Up Form</h2>
          <p> Sign up for free and get basic access to the community.</p>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
